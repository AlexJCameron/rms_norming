# list of fields to run the analysis for
fields=test_field/test_field.list
master_bands=f606w,f600lp,f098m,f125w,f160w

# the value in RMS map corresponding to value of 0 in the wht map (1/0 = ?), can be inf or (e.g.) 100
wht_zero=inf

# location of input science images and weight maps
sci_dir=test_field/test_field_data/
wht_dir=test_field/test_field_wht/

# directory to put initial crude RMS maps
rms_crude_dir=test_field/test_field_rms_crude/

# directories to put output from first crude run of SExtractor
cat_crude_dir=test_field/test_field_cat_crude/
seg_crude_dir=test_field/test_field_seg_crude/

# directory to put final normed RMS maps
rms_final_dir=test_field/test_field_rms_norm/

# directory to dump false source images and related analysis
fake_dir=test_field/test_field_false_source_imgs/

# file to list flagged sources
flag_log=test_field/test.flags
